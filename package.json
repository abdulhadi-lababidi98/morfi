{
  "name": "morfi",
  "version": "1.0.0",
  "description": "Abstract form handling for any purpose (2 kb gzipped)",
  "keywords": [
    "form",
    "react",
    "flow"
  ],
  "license": "MIT",
  "author": "Viktor Luft <viktor.luft@freiheit.com> (https://github.com/fdc-viktor-luft)",
  "homepage": "https://fdc-viktor-luft.github.io/morfi/",
  "repository": {
    "type": "git",
    "url": "https://github.com/fdc-viktor-luft/morfi"
  },
  "bugs": {
    "url": "https://github.com/fdc-viktor-luft/morfi/issues"
  },
  "scripts": {
    "dist": "bin/dist.sh",
    "start": "react-scripts start",
    "build": "react-scripts build && rm build/service-worker.js && rm -rf docs && mv build docs",
    "test": "react-scripts test --env=jsdom",
    "flow": "flow --quiet",
    "eslint": "eslint --cache --cache-location 'misc/.eslintcache' src/",
    "prettier": "prettier --config .prettierrc --write 'src/**/*.js'",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "peerDependencies": {
    "react": ">= 16.2"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/plugin-proposal-class-properties": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "coveralls": "^3.0.2",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "enzyme-to-json": "^3.3.5",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "flow-bin": "^0.93.0",
    "prettier": "^1.16.1",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-router-dom": "^4.3.1",
    "react-scripts": "^2.1.3",
    "spy4js": "^2.3.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/js/form/*.{js}"
    ],
    "coverageReporters": [
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
