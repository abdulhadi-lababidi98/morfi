{
  "name": "form4react",
  "version": "0.1.0",
  "license": "MIT",
  "dependencies": {
    "react": "^16.1.0",
    "react-dom": "^16.1.0",
    "react-scripts": "^1.0.17"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "flow": "flow --quiet",
    "eslint": "eslint --cache --cache-location 'misc/.eslintcache' src/",
    "prettier": "prettier --config .prettierrc --write 'src/**/*.js'"
  },
  "devDependencies": {
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "eslint-config-prettier": "^2.8.0",
    "eslint-plugin-prettier": "^2.3.1",
    "flow-bin": "^0.59.0",
    "prettier": "1.8.2",
    "react-test-renderer": "^16.1.1",
    "spy4js": "^1.3.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/js/form/*.{js}"
    ],
    "coverageReporters": [
      "lcov",
      "cobertura"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  },
  "main": "src/js/form/index.js",
  "files": [
    "src/js/form"
  ]
}
