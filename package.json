{
  "name": "form4react",
  "description": "Abstract form handling for any purpose (1 kb gzipped)",
  "keywords": [
    "form",
    "react",
    "compact",
    "flow"
  ],
  "version": "0.2.0",
  "license": "MIT",
  "author": "Viktor Luft <viktor.luft@freiheit.com> (https://github.com/fdc-viktor-luft)",
  "homepage": "https://fdc-viktor-luft.github.io/form4react/",
  "repository": {
    "type": "git",
    "url": "https://github.com/fdc-viktor-luft/form4react"
  },
  "bugs": {
    "url": "https://github.com/fdc-viktor-luft/form4react/issues"
  },
  "dependencies": {
    "react": "^16.1.0",
    "react-dom": "^16.1.0",
    "react-router-dom": "^4.2.2",
    "react-scripts": "^1.0.17"
  },
  "scripts": {
    "dist": "bin/dist.sh",
    "start": "react-scripts start",
    "build": "react-scripts build && rm -rf docs && mv build docs",
    "test": "react-scripts test --env=jsdom",
    "flow": "flow --quiet",
    "eslint": "eslint --cache --cache-location 'misc/.eslintcache' src/",
    "prettier": "prettier --config .prettierrc --write 'src/**/*.js'",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-preset-env": "^1.6.1",
    "coveralls": "^3.0.0",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "eslint-config-prettier": "^2.8.0",
    "eslint-plugin-prettier": "^2.3.1",
    "flow-bin": "^0.59.0",
    "prettier": "1.8.2",
    "react-test-renderer": "^16.1.1",
    "spy4js": "^1.3.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/js/form/*.{js}",
      "!src/js/form/index.js"
    ],
    "coverageReporters": [
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ]
}
